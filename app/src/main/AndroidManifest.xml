<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gamelength.cwftw.me.gamelength">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="gamelength.cwftw.me.gamelength.gamelength"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:screenOrientation="portrait"
            android:name="gamelength.cwftw.me.gamelength.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="gamelength.cwftw.me.gamelength.BootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service android:name="gamelength.cwftw.me.gamelength.UpdateService" />

        <activity
            android:screenOrientation="portrait"
            android:name="gamelength.cwftw.me.gamelength.activities.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="gamelength.cwftw.me.gamelength.activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="gamelength.cwftw.me.gamelength.activities.MainActivity" />
        </activity>
    </application>

</manifest>
